apiVersion: batch/v1
kind: Job
metadata:
  name: [[[[ARG:0]]]]
  labels:
    k8s-app: [[[[ARG:0]]]]
  namespace: sbks
spec:
  backoffLimit: 0
  template:
    spec:
      automountServiceAccountToken: false
      containers:
      - name: [[[[ARG:0]]]]
        image: jiaweitang/sbks-torch:latest
        command:
        - "/bin/bash"
        - "-c"
        - >
          cd /root &&
          git clone https://oauth2:${GITLAB_TOKEN}@gitlab.com/mhn-ucsd/sbks-ucsd.git &&
          cd /root/sbks-ucsd/relation-extraction &&
          ln -s /sbksvol/jiawei/re-model-data/weights weights &&
          ln -s /sbksvol/jiawei/re-model-data/data data &&
          [[[[ARG:1]]]]
        imagePullPolicy: Always
        resources:
          limits:
            memory: "6G"
            cpu: 1.5
            nvidia.com/gpu: 1
          requests:
            memory: "6G"
            cpu: 1.5
            nvidia.com/gpu: 1
        volumeMounts:
          - mountPath: "/sbksvol"
            name: sbksvol
        env:
        - name: PYTHONPATH
          value: "/root/sbks-ucsd/relation-extraction/biobert_RE"
        - name: GITLAB_TOKEN
          valueFrom: 
            secretKeyRef: 
              name: gary-gitlab-readonly
              key: token
      restartPolicy: Never
      volumes:
        - name: sbksvol
          persistentVolumeClaim:
            claimName: sbksvol
        - name: gary-gitlab-readonly
          secret:
            secretName: gary-gitlab-readonly
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: gpu-type
                operator: In
                values:
                - 2080Ti
                - 1080Ti
